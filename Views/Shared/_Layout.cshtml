<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TextbookExchange</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <span style="font-size: 1.2em;">📚</span> TextbookExchange
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Home" asp-action="Index">
                                <span style="font-size: 1.1em;">🏠</span> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-bold" asp-controller="Books" asp-action="Index">
                                <span style="font-size: 1.1em;">📖</span> Все учебники
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Books" asp-action="Create">
                                    <span style="font-size: 1.1em;">➕</span> Добавить учебник
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Books" asp-action="MyBooks">
                                    <span style="font-size: 1.1em;">📚</span> Мои учебники
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Exchange" asp-action="MyExchanges">
                                    <span style="font-size: 1.1em;">🔄</span> Мои обмены
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Exchange" asp-action="Completed">
                                    <span style="font-size: 1.1em;">✅</span> Завершенные обмены
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Feedback" asp-action="MyReviews">
                                    <span style="font-size: 1.1em;">⭐</span> Мои отзывы
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                    <span style="font-size: 1.1em;">👤</span> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="MyBooks">Мои учебники</a></li>
                                    <li><a class="dropdown-item" asp-controller="Exchange" asp-action="MyExchanges">Мои обмены</a></li>
                                    <li><a class="dropdown-item" asp-controller="Exchange" asp-action="Completed">Завершенные обмены</a></li>
                                    <li><a class="dropdown-item" asp-controller="Feedback" asp-action="MyReviews">Мои отзывы</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <button type="submit" class="dropdown-item">🚪 Выйти</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Account" asp-action="Register">
                                    <span style="font-size: 1.1em;">📝</span> Регистрация
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-bold" asp-controller="Account" asp-action="Login">
                                    <span style="font-size: 1.1em;">🔐</span> Вход
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - TextbookExchange - Система обмена учебниками
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Секция для дополнительных скриптов -->
    <script>
        // Автоматическое закрытие алертов через 5 секунд
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>